      "windows_cmd": "winget install --silent Python.Python.3",
      "linux_cmd": "sudo dnf install -y python3",
      "verify_cmd": "python3 --version"
    },
    {
      "id": "pip",
      "display_name": "Pip (Python package manager)",
      "windows_cmd": "python -m ensurepip --upgrade",
